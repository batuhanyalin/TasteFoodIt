@model TestFoodIt.Entities.Reservation
<section class="ftco-section ftco-wrap-about ftco-no-pb ftco-no-pt">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-sm-4 p-4 p-md-5 d-flex align-items-center justify-content-center bg-primary appointment-form">
                @using (Html.BeginForm("ReservationAppointment", "Default", FormMethod.Post))
                {
                    <h3 class="mb-3">Rezervasyon Yap</h3>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Ad Soyad" })
                                @Html.ValidationMessageFor(x => x.Name, "", new { style = "font-size:large;color:aqua" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "E-posta" })
                                @Html.ValidationMessageFor(x => x.Email, "", new { style = "font-size:large;color:aqua" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", placeholder = "Telefon" })
                                @Html.ValidationMessageFor(x => x.Phone, "", new { style = "font-size:large;color:aqua" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="input-wrap">
                                    <div class="icon" style="color:white"><span class="fa fa-calendar"></span><span style="color:white"> Tarih Seçin</span></div>
                                    @Html.TextBoxFor(m => m.ReservationDate, new { type = "date", @id = "RezDate", @name = "RezDate" })
                                    <div style="color:yellow">
                                        @Html.ValidationSummary(true)
                                        @Html.ValidationMessageFor(m => m.ReservationDate, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="form-field">
                                    <div class="select-wrap">
                                        <div class="icon"><span class="fa fa-chevron-down"></span><span style="color:white"> Konuk Sayısı</span></div>
                                        <select name="GuestCount" id="" class="form-control">
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                            <option value="5">5</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="submit" value="Rezervasyon Yap" class="btn btn-white py-2 px-3">
                            </div>
                        </div>
                    </div>
                }
            </div>
            @Html.Action("PartialAbout", "Default")
        </div>
    </div>
</section>

