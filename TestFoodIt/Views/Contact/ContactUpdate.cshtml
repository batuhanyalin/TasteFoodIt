@model TestFoodIt.Entities.Contact

@{
    ViewBag.Title = "ContactUpdate";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Mesaj Güncelleme Sayfası</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard/Index">Anasayfa</a></li>
            <li class="breadcrumb-item">Mesaj</li>
            <li class="breadcrumb-item active" aria-current="page">İletişim İşlemleri</li>
        </ol>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Mesaj Paneli</h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            @Html.HiddenFor(x => x.ContactId)
                            @Html.HiddenFor(x => x.SendDate)
                        </div>
                        <div class="form-group">
                            <label>Adı Soyadı</label>
                            @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
                            <label>E-posta</label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                            <label>Konu</label>
                            @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                            <label>Mesaj</label>
                            @Html.TextBoxFor(x => x.Message, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <h5>Mesaj Durumu</h5>
                            @Html.RadioButtonFor(x => x.IsRead, "True", new { @class = "btn-check", id = "True" })
                            <label class="btn btn-secondary" for="True">Okundu</label>
                            <br />
                            @Html.RadioButtonFor(x => x.IsRead, "False", new { @class = "btn-check", id = "False" })
                            <label class="btn btn-danger" for="False">Okunmadı</label>
                        </div>
                        <br />
                        <button type="submit" class="btn btn-outline-primary">Mesaj Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>