@model List<TestFoodIt.Entities.Contact>
@{
    ViewBag.Title = "ContactList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">İletişim Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">İletişim</li>
            <li class="breadcrumb-item active" aria-current="page">Mesaj İşlemleri</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <a href="/Notification/NotificationCreate" class="btn btn-primary"><i class="fa fa-plus-circle"></i>Yeni Mesaj Girişi</a>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>Mesaj ID</th>
                                <th>Adı Soyadı</th>
                                <th>E-posta</th>
                                <th>Konu</th>
                                <th>Mesaj</th>
                                <th>Tarih</th>
                                <th>Durum</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                string status = "";
                                string statusText = "";

                                if (item.IsRead==true)
                                {
                                    status = "bg-secondary";
                                    statusText="Okundu";
                                }
                                else
                                {
                                    status = "bg-danger";
                                    statusText = "Okunmadı";
                                }
                                <tr>
                                    <td>@count</td>
                                    <td>@item.NameSurname</td>
                                    <td>@item.Email</td>
                                    <td>@item.Subject</td>
                                    <td>@item.Message</td>
                                    <td>@item.SendDate</td>
                                    <td><a href="/Contact/ContactStatusUpdate/@item.ContactId"><span class="badge @status" style="color:white">@statusText</span></a></td>
                                    <td><a href="/Contact/ContactDelete/@item.ContactId" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Contact/ContactUpdate/@item.ContactId" class="btn btn-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
</div>
