@model TestFoodIt.Entities.Chef
@{
    ViewBag.Title = "ChefCreate";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Şef Kayıt Sayfası</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Product/ProductList">Anasayfa</a></li>
            <li class="breadcrumb-item">Şef</li>
            <li class="breadcrumb-item active" aria-current="page">Şef Kayıt Paneli</li>
        </ol>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Ekleme Paneli</h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label>Adı Soyadı</label>
                            @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
                            <br />
                            <label>Nitelik</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                            <br />
                            <label>Açıklama</label>
                            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                            <br />
                            <label>Sosyal Medya Hesabı Platformu</label>
                            @Html.TextBoxFor(x => x.ChefSocialMediaName, new { @class = "form-control" })
                            <br />
                            <label>Kişisel Hesap Linki</label>
                            @Html.TextBoxFor(x => x.ChefSocialMediaUrl, new { @class = "form-control" })
                            <br />
                            <label>Şef Fotoğrafı</label>
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                            <br />
                        </div>
                        <button type="submit" class="btn btn-primary">Şefi Sisteme Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>