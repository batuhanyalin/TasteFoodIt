@model List<TestFoodIt.Entities.Chef>
@{
    ViewBag.Title = "ChefList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Şef Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">Şefler</li>
            <li class="breadcrumb-item active" aria-current="page">Şef Paneli</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <a href="/Chefs/ChefCreate" class="btn btn-primary"><i class="fa fa-plus-circle"></i>Yeni Şef Kaydı</a>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>ID</th>
                                <th>Adı Soyadı</th>
                                <th>Nitelik</th>
                                <th>Açıklama</th>
                                <th>Fotoğraf</th>
                                <th>Sosyal Medya Hesabı</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.NameSurname</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td><img src="@item.ImageUrl" style="height:100px;width:100px;" class="rounded mx-0 d-block" alt="@item.ImageUrl"></td>
                                <td><a class="btn btn-info" href="@item.ChefSocialMediaUrl"><i class="fas fa-paper-plane"></i></a></td>
                                <td><a href="/Chefs/ChefDelete/@item.ChefId" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Chefs/ChefUpdate/@item.ChefId" class="btn btn-success">Güncelle</a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
</div>
