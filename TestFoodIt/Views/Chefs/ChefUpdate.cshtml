@model TestFoodIt.Entities.Chef
@{
    ViewBag.Title = "ChefUpdate";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Şef Güncelleme Sayfası</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Product/ProductList">Anasayfa</a></li>
            <li class="breadcrumb-item">Şef</li>
            <li class="breadcrumb-item active" aria-current="page">Şef Bilgi Güncelleme</li>
        </ol>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Güncelleme Paneli</h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            @Html.HiddenFor(x => x.ChefId)
                            <label>Adı Soyadı</label>
                            @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
                            <br />
                            <label>Nitelik</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                            <br />
                            <label>Sosyal Medya Hesabı Platformu</label>
                            @Html.TextBoxFor(x => x.ChefSocialMediaName, new { @class = "form-control" })
                            <br />   
                            <label>Kişisel Hesap Linki</label>
                            @Html.TextBoxFor(x => x.ChefSocialMediaUrl, new { @class = "form-control" })
                            <br /> 
                            <label>Açıklama</label>
                            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                            <br />
                            <div class="row">
                                <div class="col col-md-2">
                                    <label>Şu anda yüklü görsel</label>
                                    <img src="@Model.ImageUrl" style="height:150px;width:200px;" class="rounded mx-0 d-block" alt="@Model.ImageUrl">
                                </div>
                                <div class="col col-md-10">
                                    <label>Görsel URL</label>
                                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                                    <span>Yüklemek istediğiniz görselin linkini yapıştırın ve güncelle butonuna basın.</span>
                                </div>
                            </div>
                            <br />
                        </div>
                        <button type="submit" class="btn btn-success">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>