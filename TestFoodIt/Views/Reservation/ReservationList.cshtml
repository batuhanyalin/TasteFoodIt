@model List<TestFoodIt.Entities.Reservation>
@{
    ViewBag.Title = "ReservationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Rezervasyon Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">Rezervasyonlar</li>
            <li class="breadcrumb-item active" aria-current="page">Rezervasyon Listesi</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <a href="/Reservation/ReservationCreate" class="btn btn-primary"><i class="fa fa-plus-circle"></i>    Yeni Rezervasyon Girişi</a>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>ID</th>
                                <th>Tarih</th>
                                <th>Adı Soyadı</th>
                                <th>E-posta</th>
                                <th>Telefon</th>
                                <th>Durum</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                string status = "";
                                string statusText = "";
                                if (item.ReservationStatus == "onaylandi")
                                {
                                    status = "bg-success";
                                    statusText = "Onaylandı";
                                }
                               else if (item.ReservationStatus=="iptal")
                                {
                                    status = "bg-danger";
                                    statusText = "İptal Edildi";
                                }
                                else
                                {
                                    status = "bg-warning";
                                    statusText = "Bekliyor";
                                }
                                <tr>
                                    <td>@item.ReservationId</td>
                                    <td>@item.ReservationDate</td>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td>@item.Phone</td>
                                    <td><a href="#"><span class="badge @status" style="color:white">@statusText</span></a></td>
                                    <td><a href="/Reservation/ReservationDelete/@item.ReservationId" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Reservation/ReservationUpdate/@item.ReservationId" class="btn btn-success">Güncelle</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
</div>
