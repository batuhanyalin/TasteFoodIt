@model List<TestFoodIt.Entities.About>

@{
    ViewBag.Title = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Hakkında Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">Hakkında</li>
            <li class="breadcrumb-item active" aria-current="page">Hakkında Paneli</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>ID</th>
                                <th>Başlık</th>
                                <th>Açıklama</th>
                                <th>Görsel URL</th>
                                <th>Görsel</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>@item.ImageURL</td>
                                    <td><img src="@item.ImageURL" style="height:200px;width:170px;" class="rounded mx-0 d-block" alt="@item.ImageURL"></td>
                                    <td><a href="/About/AboutDelete/@item.AboutId" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/About/AboutUpdate/@item.AboutId" class="btn btn-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">

                        @if (count == 1)
                        {
                            <a href="/About/AboutCreate" class="btn btn-primary disabled"><i class="fa fa-plus-circle"></i> Yeni Hakkında Kaydı</a>
                        }
                        else
                        {
                            <a href="/About/AboutCreate" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Yeni Hakkında Kaydı</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
