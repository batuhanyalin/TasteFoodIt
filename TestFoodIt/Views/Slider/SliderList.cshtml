@model List<TestFoodIt.Entities.Slider>

@{
    ViewBag.Title = "SliderList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Slider Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">Sliderlar</li>
            <li class="breadcrumb-item active" aria-current="page">Slider Paneli</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>ID</th>
                                <th>Slider URL</th>
                                <th>Büyük Başlık</th>
                                <th>Küçük Başlık</th>
                                <th>Açıklama</th>
                                <th>Slider Görüntüsü</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.SliderUrl</td>
                                    <td>@item.SliderHeading</td>
                                    <td>@item.SliderTitle</td>
                                    <td>@item.SliderDescription</td>
                                    <td><img src="@item.SliderUrl" style="height:100px;width:150px;" class="rounded mx-0 d-block" alt="@item.SliderUrl"></td>
                                    <td><a href="/Slider/SliderDelete/@item.SliderId" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Slider/SliderUpdate/@item.SliderId" class="btn btn-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">

                        @if (count == 3)
                        {
                            <a href="/Slider/SliderCreate" class="btn btn-primary disabled" ><i class="fa fa-plus-circle"></i> Yeni Slider Kaydı</a>
                        }
                        else
                        {
                            <a href="/Slider/SliderCreate" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Yeni Slider Kaydı</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
