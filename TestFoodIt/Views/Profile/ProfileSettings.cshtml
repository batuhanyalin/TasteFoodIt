@model TestFoodIt.Entities.ResetPassword
@{
    ViewBag.Title = "ProfileSettings";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Profil Bilgileri</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">Profilim</li>
            <li class="breadcrumb-item active" aria-current="page">Profil İşlemleri</li>
        </ol>
    </div>
    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                </div>
                <div>
                    <h3><i class="fas fa-user m-md-1"></i> | @ViewBag.id Kullanıcı Adınız: <span style="color:deepskyblue">@ViewBag.username</span></h3>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                </div>
                <div>
                    <h3><i class="fas fa-key m-md-1"></i> | Şifreniz: <span style="color:deepskyblue">@ViewBag.password</span></h3>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
    <div class="row">
        <h3><i class="fas fa-star m-md-1"></i> Şifre Yenileme</h3>
    </div>
    @using (Html.BeginForm("ProfileSettings", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true)
        <div class="row">
            <div class="col-lg-4 mb-4">
                <!-- Simple Tables -->
                <div class="card">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    </div>
                    <div>
                        <h3>Yeni Şifrenizi Girin:</h3>@Html.PasswordFor(x => x.NewPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.NewPassword)
                    </div>
                    <div class="card-footer"></div>
                </div>
            </div>
            <div class="col-lg-4 mb-4">
                <!-- Simple Tables -->
                <div class="card">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    </div>
                    <div>
                        <h3>Yeni Şifrenizi Onaylayın:</h3>@Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
                    </div>
                    <div class="card-footer"></div>
                </div>
            </div>
        </div>
        <div>
            <h5 style="color:red">@Html.ValidationMessageFor(x => x.ConfirmPassword)</h5>
        </div>

        <div class="row">
            <button class="btn btn-success" type="submit">Şifreyi Değiştir</button>
        </div>
    }

</div>




