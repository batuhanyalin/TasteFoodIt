
@{
    ViewBag.Title = "NotificationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
@model List<TestFoodIt.Entities.Notification>
<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Bildirim Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">Bildirimler</li>
            <li class="breadcrumb-item active" aria-current="page">Bildirim Listesi</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <a href="/Notification/NotificationCreate" class="btn btn-primary"><i class="fa fa-plus-circle"></i>Yeni Bildirim Girişi</a>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>Bildirim ID</th>
                                <th>Tarih</th>
                                <th>Açıklama</th>
                                <th>Icon</th>
                                <th>Durum</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                string status = "";
                                string statusText = "";
                                if (item.IsRead==true)
                                {
                                    status = "bg-secondary";
                                    statusText = "Okundu";
                                }
                                else
                                {
                                    status = "bg-danger";
                                    statusText = "Okunmadı";
                                }
                                <tr>
                                    <td>@item.NotificationId</td>
                                    <td>@item.Date</td>
                                    <td>@item.Description</td>
                                    <td><div class="icon-circle @item.IconColor"><i class="fas @item.Icon text-white"></i></div></td>
                                    <td><a href="/Notification/ChangeNotificationStatus/@item.NotificationId"><span class="badge @status" style="color:white">@statusText</span></a></td>
                                    <td><a href="/Notification/NotificationDelete/@item.NotificationId" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Notification/NotificationUpdate/@item.NotificationId" class="btn btn-success">Güncelle</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
</div>
