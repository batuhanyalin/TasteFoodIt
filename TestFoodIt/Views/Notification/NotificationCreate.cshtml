@model TestFoodIt.Entities.Notification
@{
    ViewBag.Title = "NotificationCreate";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Bildirim Ekleme Sayfası</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Product/ProductList">Anasayfa</a></li>
            <li class="breadcrumb-item">Bildirim</li>
            <li class="breadcrumb-item active" aria-current="page">Bildirim İşlemleri</li>
        </ol>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Ekleme Paneli</h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label>Bildirim Açıklaması</label>
                            @Html.TextBoxFor(x => x.Description, new {@class="form-control"})
                            <br />
                        </div>
                        <div class="form-group">
                            <label>Icon</label>
                            <div class="form-check">
                                <div class="form-check form-check-inline">
                                    <input class="btn-check" type="radio" value="fas fa-thumbs-up" name="Icon" id="thumbs-up" autocomplete="off" />
                                    <label class="btn btn-light m-md-1" for="thumbs-up"><i class="fas fa-thumbs-up"></i></label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="btn-check" type="radio" value="fas fa-thumbs-down" name="Icon" id="thumbs-down" autocomplete="off" />
                                    <label class="btn btn-light m-md-1" for="thumbs-down"><i class="fas fa-thumbs-down"></i></label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="btn-check" type="radio" value="fas fa-star" name="Icon" id="star" autocomplete="off" />
                                    <label class="btn btn-light m-md-1" for="star"><i class="fas fa-star"></i></label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="btn-check" type="radio" value="fas fa-wifi" name="Icon" id="wifi" autocomplete="off" />
                                    <label class="btn btn-light m-md-1" for="wifi"><i class="fas fa-wifi"></i></label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="btn-check" type="radio" value="fas fa-lightbulb" name="Icon" id="lightbulb" autocomplete="off" />
                                    <label class="btn btn-light m-md-1" for="lightbulb"><i class="fas fa-lightbulb"></i></label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="btn-check" type="radio" value="fas fa-tags" name="Icon" id="tags" autocomplete="off" />
                                    <label class="btn btn-light m-md-1" for="tags"><i class="fas fa-tags"></i></label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="btn-check" type="radio" value="fas fa-info-circle" name="Icon" id="info-circle" autocomplete="off" />
                                    <label class="btn btn-light m-md-1" for="info-circle"><i class="fas fa-info-circle"></i></label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="btn-check" type="radio" value="fas fa-cogs" name="Icon" id="cogs" autocomplete="off" />
                                    <label class="btn btn-light m-md-1" for="cogs"><i class="fas fa-cogs"></i></label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="btn-check" type="radio" value="fas fa-calendar-alt" name="Icon" id="calendar-alt" autocomplete="off" />
                                    <label class="btn btn-light m-md-1" for="calendar-alt"><i class="fas fa-calendar-alt"></i></label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="btn-check" type="radio" value="fas fa-power-off" name="Icon" id="power-off" autocomplete="off" />
                                    <label class="btn btn-light m-md-1" for="power-off"><i class="fas fa-power-off"></i></label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="btn-check" type="radio" value="fas fa-cart-arrow-down" name="Icon" id="cart-arrow-down" autocomplete="off" />
                                    <label class="btn btn-light m-md-1" for="cart-arrow-down"><i class="fas fa-cart-arrow-down"></i></label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="btn-check" type="radio" value="fas fa-bullhorn" name="Icon" id="bullhorn" autocomplete="off" />
                                    <label class="btn btn-light m-md-1" for="bullhorn"><i class="fas fa-bullhorn"></i></label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="btn-check" type="radio" value="fas fa-sync-alt" name="Icon" id="sync-alt" autocomplete="off" />
                                    <label class="btn btn-light m-md-1" for="sync-alt"><i class="fas fa-sync-alt"></i></label>
                                </div>
                            </div>
                        </div>
                        <div class="dropdown-divider">
                        </div>
                        <div class="form-group">
                            <label>Renk</label>
                            <div class="form-check">
                                <div class="form-check form-check-inline">
                                    <input class="btn-check" type="radio" value="bg-primary" name="IconColor" id="blue" autocomplete="off" />
                                    <label class="btn bg-primary text-white m-md-1" for="blue">Mavi</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="btn-check" type="radio" value="bg-secondary" name="IconColor" id="gray" autocomplete="off" />
                                    <label class="btn bg-secondary text-white m-md-1" for="gray">Gri</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="btn-check" type="radio" value="bg-success" name="IconColor" id="green" autocomplete="off" />
                                    <label class="btn bg-success text-white m-md-1" for="green">Yeşil</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="btn-check" type="radio" value="bg-info" name="IconColor" id="lightblue" autocomplete="off" />
                                    <label class="btn bg-info text-white m-md-1" for="lightblue">Açık Mavi</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="btn-check" type="radio" value="bg-warning" name="IconColor" id="orange" autocomplete="off" />
                                    <label class="btn bg-warning text-white m-md-1" for="orange">Turuncu</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="btn-check" type="radio" value="bg-danger" name="IconColor" id="red" autocomplete="off" />
                                    <label class="btn bg-danger text-white m-md-1" for="red">Kırmızı</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="btn-check" type="radio" value="bg-dark" name="IconColor" id="dark" autocomplete="off" />
                                    <label class="btn bg-dark text-white m-md-1" for="dark">Siyah</label>
                                </div>
                            </div>
                        </div>
                        <div class="dropdown-divider">
                        </div>
                        <br />
                        <button type="submit" class="btn btn-outline-primary">Bildirim Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>