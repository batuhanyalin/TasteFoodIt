@model List<TestFoodIt.Entities.Category>
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Kategori Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">Kategoriler</li>
            <li class="breadcrumb-item active" aria-current="page">Kategori İşlemleri</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <a href="/Category/CategoryCreate" class="btn btn-primary"><i class="fa fa-plus-circle"></i>    Yeni Kategori Girişi</a>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>Kategori ID</th>
                                <th>Kategori Adı</th>
                                <th>Kategoriye Ait Ürünler</th>
                                <th>Kategoriye Ait Ürün Sayısı</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;

                                <tr>
                                    <td>@count</td>
                                    <td>@item.CategoryName</td>
                                    <td><a href="/Category/CategoryProduct/@item.CategoryId" class="btn btn-warning"><i class="fas fa-paper-plane"></i></a></td>
                                    <td><label>Hesaplanıyor...</label></td>
                                    <td><a href="/Category/CategoryDelete/@item.CategoryId" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Category/CategoryUpdate/@item.CategoryId" class="btn btn-success">Güncelle</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
</div>
