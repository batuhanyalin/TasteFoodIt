@model List<TestFoodIt.Entities.Notification>
    @{ int count = 0;
        string countColor = "";}
<li class="nav-item dropdown no-arrow mx-1">
    <a class="nav-link dropdown-toggle" href="#" id="alertsDropdown" role="button" data-toggle="dropdown"
       aria-haspopup="true" aria-expanded="false">
        @if (ViewBag.count == 0)
        {
            countColor = "badge badge-success badge-counter";
        }
        else
        {
            countColor = "badge badge-danger badge-counter";

        }
        <i class="fas fa-bell fa-fw"></i>
        <span class="@countColor">@ViewBag.count</span>
    </a>
    <div class="dropdown-list dropdown-menu dropdown-menu-right shadow animated--grow-in"
         aria-labelledby="alertsDropdown">
        <h6 class="dropdown-header">
            Bildirimler
        </h6>
        @foreach (var item in Model)
        {
            count++;
            if (count <= 5)
            {
                <a class="dropdown-item d-flex align-items-center" href="/Notification/NotificationUpdate/@item.NotificationId">
                    <div class="mr-3">
                        <div class="icon-circle @item.IconColor">
                            <i class="@item.Icon text-white"></i>
                        </div>
                    </div>
                    <div>
                        <div class="small text-gray-500">@item.Date</div>
                        @if (@item.IsRead != true)
                        {
    <span class="font-weight-bold">@item.Description</span> }
                        else
                        {
                            <span class="font-weight-normal">@item.Description</span>
                        }
                    </div>
                </a>
            }
            else
            {

            }
        }
        <a class="dropdown-item text-center small text-gray-500" href="/Notification/NotificationList">Tüm Bildirimleri Göster</a>
    </div>
</li>

