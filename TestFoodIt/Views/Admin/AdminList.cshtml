@model List<TestFoodIt.Entities.Admin>

@{
    ViewBag.Title = "AdminList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}


<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Kullanıcı Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">Kullanıcılar</li>
            <li class="breadcrumb-item active" aria-current="page">Kullanıcı Paneli</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <a href="/Admin/AdminCreate" class="btn btn-primary"><i class="fa fa-plus-circle"></i>Yeni Kullanıcı Kaydı</a>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>ID</th>
                                <th>Adı Soyadı</th>
                                <th>Kullanıcı Adı</th>
                                <th>Parola</th>
                                <th>Fotoğraf</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Namesurname</td>
                                    <td>@item.Username</td>
                                    <td>@item.Password</td>
                                    <td><img src="@item.UserPhotoURL" style="height:120px;width:100px;" class="rounded mx-0 d-block" alt="@item.UserPhotoURL"></td>
                                    <td><a href="/Admin/AdminDelete/@item.AdminId" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Admin/AdminUpdate/@item.AdminId" class="btn btn-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
</div>
